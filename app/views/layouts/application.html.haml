!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}/
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}/

    -# Google AdSense
    -# %script{async: "", "data-ad-client" => "ca-pub-5148137228402282", src: "https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"}

    -# Display media in searches and social media
    = display_meta_tags

    = favicon_link_tag asset_pack_path('media/images/favicon.png')
    %title= content_for?(:title) ? ("Recipedia | #{yield(:title)}").html_safe : 'Recipedia'

    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': true
    = csrf_meta_tags
  %body
    #wrap
      = render 'layouts/top_bar'

      #main
        = render 'notifications/flash_messages'
        = render 'layouts/search_box'
        = yield
        -# Render a page print footer on every printed page
        = render 'layouts/print_footer'

    = render 'layouts/footer'
