.grid-x.center
  .medium-6.cell
    %h1 Resend unlock instructions

    = form_with model: resource, as: resource_name, url: unlock_path(resource_name),
    html: { method: :post }, local: true, data: { turbo: false } do |f|
      = render 'notifications/error_messages', object: f.object

      = f.label :email
      = f.email_field :email, autofocus: true

      = f.submit 'Resend unlock instructions', class: 'button'

    = render 'devise/shared/links'
