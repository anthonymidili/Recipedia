.row.center
  .col-md-6
    %h1 Log in

    = form_with model: resource,
    as: resource_name, url: session_path(resource_name),
    local: true, data: { turbo: false } do |f|
      .mb-3
        = f.label :email, for: "deviseEmail", class: "form-label"
        = f.email_field :email, autofocus: true,
        id: "deviseEmail", class: "form-control"
      .mb-3
        = f.label :password, for: "devisePassword", class: "form-label"
        = f.password_field :password, autocomplete: 'off',
        id: "devisePassword", class: "form-control"
      .mb-3
        - if devise_mapping.rememberable?
          .form-check
            = f.check_box :remember_me, id: "deviseRemember",
            class: "form-check-input"
            = f.label :remember_me, for: "deviseRemember",
            class: "form-check-label"
      .mb-3
        = f.submit 'Log in', class: 'btn btn-primary'

    .mb-3
      = render 'devise/shared/links'
