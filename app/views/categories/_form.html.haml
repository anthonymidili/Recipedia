= form_with model: category, id: dom_id(category, "form"), local: false do |f|
  = render 'notifications/error_messages', object: f.object

  .grid-x
    .medium-8.large-6.cell
      .input-group
        %span.input-group-label= f.label :name, 'Category name'
        = f.text_field :name, class: 'input-group-field'
        .input-group-button= f.submit class: 'button'
    .medium-4.large-6.cell
      = link_to 'Cancel', "#", class: "button warning"
