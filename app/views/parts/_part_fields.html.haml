.nested-fields
  .callout
    .row
      .col-md-6.order-sm-1.order-md-2.mb-3
        .float-md-end
          = link_to_remove_association f, class: 'red-text' do
            %i.fa.fa-trash
            Remove Recipe Part
      .col-md-6.order-sm-2.order-md-1.mb-3
        = f.label :name, class: "form-label", for: "partName"
        = f.text_field :name, placeholder: 'Pie Crust',
        id: "partName", class: "form-control"

    = render 'ingredients/fields_for_form', f: f

    = render 'steps/fields_for_form', f: f
